# CWB Hub External API Configuration
# Copy this file to .env and adjust the values

# API Configuration
CWB_HUB_API_HOST=0.0.0.0
CWB_HUB_API_PORT=8002
CWB_HUB_API_DEBUG=true

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=1
REDIS_PASSWORD=

# Rate Limiting
DEFAULT_RATE_LIMIT=1000
BURST_RATE_LIMIT=100
RATE_LIMIT_WINDOW=3600

# JWT Configuration
JWT_SECRET_KEY=cwb-hub-external-api-secret-change-in-production
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# Webhooks Configuration
WEBHOOK_TIMEOUT=30
WEBHOOK_RETRY_COUNT=3
WEBHOOK_MAX_PAYLOAD_SIZE=1048576

# Database Configuration (if using database)
DATABASE_URL=sqlite:///./cwb_hub_external.db
DATABASE_ECHO=false

# Logging Configuration
LOG_LEVEL=INFO
LOG_FORMAT=json
LOG_FILE=logs/external_api.log

# CORS Configuration
CORS_ORIGINS=["*"]
CORS_ALLOW_CREDENTIALS=true
CORS_ALLOW_METHODS=["*"]
CORS_ALLOW_HEADERS=["*"]

# Security Configuration
TRUSTED_HOSTS=["*"]
ALLOWED_HOSTS=["*"]

# Monitoring Configuration
ENABLE_METRICS=true
METRICS_PORT=9090
SENTRY_DSN=

# File Storage Configuration
UPLOAD_DIR=uploads
MAX_UPLOAD_SIZE=10485760
ALLOWED_EXTENSIONS=["json", "csv", "xml"]

# Email Configuration (for notifications)
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
SMTP_TLS=true

# External Services
CWB_HUB_CORE_URL=http://localhost:8000
WEBHOOK_MANAGER_URL=http://localhost:8001

# Development/Testing
TESTING=false
TEST_DATABASE_URL=sqlite:///./test_cwb_hub_external.db